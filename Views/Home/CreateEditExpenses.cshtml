@{
    ViewData["Title"] = "Creat - Edit";
}

@model spendsmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit an Expenses</h1>
    
</div>


<form asp-action="CEEForm">
    <label hidden class="mt-4" for="">Id</label>
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" >

    <label class="mt-4" for="">Value</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01">

    <label class="mt-4" for="">Description</label>
    <input class="form-control" type="text" placeholder="Add a Description" asp-for="Description">

    <button class="btn btn-primary mt-4" type="submit">Add</button>
</form> 